#/usr/bin/env bash

set -e

echo "Building system..."

# sudo env LOCALE_ARCHIVE=$LOCALE_ARCHIVE nixos-rebuild switch --flake '.#spacedesktop'
sudo nixos-rebuild switch --flake '.?submodules=1#spacedesktop'

echo "Building home..."

home-manager switch --flake ".?submodules=1#space@spacedesktop" --option extra-builtins-file extra-builtins.nix
